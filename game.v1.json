{
  "name": "7-wonders-duel",
  "friendlyName": "7 Wonders Duel",
  "description": "Science? Military? What will you draft to win this head-to-head version of 7 Wonders?",
  "minPlayers": 2,
  "maxPlayers": 2,
  "image": "image.jpg",
  "ui": {
    "root": ".",
    "build": {
      "dev": "npm run build:ui",
      "prod": "npm run build:ui:prod"
    },
    "watchPaths": [
      "src/ui",
      "src/game"
    ],
    "outDir": "build/ui"
  },
  "game": {
    "root": ".",
    "build": {
      "dev": "npm run build:game",
      "prod": "npm run build:game:prod"
    },
    "watchPaths": [
      "src/game"
    ],
    "out": "build/game/game-interface.js"
  }
}
